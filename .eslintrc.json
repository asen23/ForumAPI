{
  "env": {
    "commonjs": true,
    "es2021": true,
    "jest/globals": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["jest"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always", 
      "named": "never", 
      "asyncArrow": "always"
    }]
  }
}
